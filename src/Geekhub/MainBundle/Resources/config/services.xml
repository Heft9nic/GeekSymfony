<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="my_simple_service" class="Geekhub\MainBundle\Services\SimpleService" />

        <service id="geekhub.menu_builder" class="Geekhub\MainBundle\Menu\Builder">
            <argument type="service" id="knp_menu.factory"/>
        </service>

        <service id="geekhub.menu.main" class="Knp\Menu\MenuItem"
                 factory-service="geekhub.menu_builder"
                 factory-method="createMainMenu" scope="request">
            <argument type="service" id="request"/>
            <tag name="knp_menu.menu" alias="main"/>
        </service>

        <service id="geekhub.form.type.comment" class="Geekhub\MainBundle\Form\Type\CommentType">
        </service>

    </services>

</container>
