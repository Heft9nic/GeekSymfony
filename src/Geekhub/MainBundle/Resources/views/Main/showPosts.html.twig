{% extends 'GeekhubMainBundle::layout.html.twig' %}

{% block content %}
    <h1>Posts</h1>

    <small>Total posts: {{ posts|length }}</small>

    <div id="posts">
        {% for post in posts %}
            <div id="post">
                <h3>{{ post.title }}</h3>

                <p>{{ post.content }}</p>

                <p>{{ post.date|date }}</p>

                <a href="{{ path('show_post', {'id' : post.id}) }}">Read more</a>

                <small>Total comments: {{ post.comments|length }}</small>
            </div>
        {% endfor %}
    </div>

{% endblock %}
